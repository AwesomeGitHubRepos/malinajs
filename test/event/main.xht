<script>
  const click = () => $context.click++;
  const click2 = () => $context.click2++;
  const click4 = () => $context.click4++;
  const click5 = el => {
    $context.click5++;
    $context.btn5 = el.firstChild.data;
  }

  const input = e => $context.input++;
</script>

<button @click>1</button>
<button @click:click2>2</button>
<button @click={click}>3</button>
<button @click={(e) => click4(e)}>4</button>
<button @click={click5($element)}>btn-5</button>
<button @click={$context.click6++}>6</button>
<input type="text" @keyup|enter:input />
